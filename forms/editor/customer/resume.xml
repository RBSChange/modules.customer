	<section name="carts" linkedtab="carts" actiontexti18n="m.uixul.bo.doceditor.section.action.view" labeli18n="m.customer.bo.doceditor.section.carts" image="{IconsBase}/small/cart.png">
	</section>
	<section name="orders" linkedtab="orders" actiontexti18n="m.uixul.bo.doceditor.section.action.view" labeli18n="m.customer.bo.doceditor.section.orders" image="{IconsBase}/small/order.png">
	</section>
	<xul>
		<javascript>
			<constructor><![CDATA[
				this.extendMethod("fireInitializeComplete", this.fireInitializeCompleteExtend);
			]]></constructor>
			<method name="fireInitializeCompleteExtend">
				<parameter name="result" />
				<body><![CDATA[
					// Activate anonymization?
					if (result.status == "OK" && 'canBeAnonymized' in result.contents.properties)
					{
						var row = document.getAnonymousElementByAttribute(this, 'propertyname', 'anonymization');
						row.removeAttribute('disableaction');
					}
				]]></body>
			</method>
		</javascript>
	</xul>
</panel>