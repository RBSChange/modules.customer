	<section name="properties" linkedtab="properties" actiontexti18n="m.uixul.bo.doceditor.section.action.view" labeli18n="m.uixul.bo.doceditor.section.properties" image="{IconsBase}/small/edit-properties.png">
		<property name="fullName" labeli18n="m.customer.bo.doceditor.property.full-name" />
		<property name="codeReference" labeli18n="m.customer.bo.doceditor.property.code" />
		<property name="creationdate" labeli18n="m.uixul.bo.doceditor.property.creationdate" />
		<property name="anonymization" class="action" type="anonymize" labeli18n="m.customer.document.customer.anonymization" />
	</section>
	<section name="publication" linkedtab="publication" labeli18n="m.uixul.bo.doceditor.section.publication" image="{IconsBase}/small/status.png">
		<property name="status" labeli18n="m.uixul.bo.doceditor.property.status" />
		<property name="workflow" labeli18n="m.uixul.bo.doceditor.property.workflow" />
	</section>
	<section name="history" linkedtab="history" actiontexti18n="m.uixul.bo.doceditor.section.action.view" labeli18n="m.uixul.bo.doceditor.section.history" image="{IconsBase}/small/history.png">
		<property name="modificationdate" labeli18n="m.uixul.bo.doceditor.property.modificationdate" />
